@model Material

<h2>Create a New Material</h2>

@using (Html.BeginForm("InsertMaterialToDatabase", "Material", "Post"))
{
    <input asp-for="MaterialID" type="hidden" value="" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />

    <label asp-for="AmountNeeded" class="control-label">Initial Amount Needed</label>
    <input type="number" step="1" name="AmountNeeded" class="form-control" value="@Model.AmountNeeded" />
   

    <input type="submit" value="Create Material" class="btn btn-primary" />
}