@model Material

<h3>@Model.Name Information</h3>

<table class="table">
    <tr>
        
        <th>Name</th>
        <th>AmountNeeded</th>
       
    </tr>
    <tr>
        
        <td>@Model.Name</td>
        <td>@Model.AmountNeeded</td>
       
    </tr>
</table>
<div style="display: block">
    <a href="/Material/UpdateMaterial/@Model.MaterialID">Update this Material</a>
</div>
<div style="display: block">

    @using (Html.BeginForm("DeleteMaterial", "Material", "Post"))
    {
        <input type="hidden" asp-for="MaterialID" value="@Model.MaterialID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this Material" />
    }
</div>