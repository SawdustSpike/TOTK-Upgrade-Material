@model Material

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateMaterialToDatabase", "Material", "Post"))
{
    <input asp-for="MaterialID" type="hidden" value="@Model.MaterialID" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label asp-for="AmountNeeded" class="control-label">Amount Used</label>
    <input type="number" step="1" name="AmountNeeded" class="form-control" value="" />

    <input type="submit" value="Update Material" class="btn btn-primary" />
}